{
  "name": "stencil-bulma",
  "version": "1.0.0",
  "description": "Stencil Bulma example",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --stats",
    "deploy": "gh-pages -d www",
    "dev": "stencil build --dev --watch --serve",
    "lint": "sd concurrent \"npm run lint:ts\" \"npm run lint:styles\"",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint:ts": "tslint -p tsconfig.json -c tslint.json",
    "serve": "stencil-dev-server",
    "serve:prod": "npm run build && serve ./www --cors",
    "start": "npm run dev",
    "stylelint:fix": "stylelint --fix \"src/**/*.scss\"",
    "test": "stencil test --spec",
    "test:watch": "stencil test --spec --watchAll"
  },
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "@stencil/core": "latest"
  },
  "devDependencies": {
    "@stencil/dev-server": "^0.0.18",
    "@stencil/sass": "0.1.1",
    "@stencil/utils": "^0.0.5",
    "@types/jest": "^23.3.5",
    "bulma": "^0.7.2",
    "gh-pages": "2.0.1",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}